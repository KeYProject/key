\functions { int startVal; }
\programVariables { int timer; }

/*

   Invariant:
       timer>=0 & executionTime = 2*(startVal-timer)
   Decreases:
      timer

*/

\hoareET {

{ startVal >= 0 & executionTime = 0}
 
[timer := startVal]

\[{   
      while (timer>0) {
          timer = timer -1;
      } 	
}\]

{ timer = 0 & executionTime = 2*startVal + 1}
}
