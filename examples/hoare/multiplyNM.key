\functions {
   int nv;
   int mv;
}

\programVariables {
  int res, n, m;
}

// invariant: res = (nv-n)*m & n>=0 & m = mv

\hoare {
 
  { nv >= 0 & n = nv & m = mv }
 
  [ n:=nv || m:=mv ]
   \[{       
      res = 0;
      while (n>0) { 
       res = res + m; 
       n = n - 1; 
     }   
   }\]

  { res = nv * mv }

}
