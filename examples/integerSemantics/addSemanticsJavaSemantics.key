/**
   Test rules treating Java's add operator when using real Java's integers.

   @provable yes
   @author Richard Bubel
 */

\javaSource "./classes/";

\withOptions intRules:javaSemantics;

\programVariables {
   A self;
   byte  bmin, bmax;
   short smin, smax;
   int   imin, imax;
   long  lmin, lmax;

   byte b1, b2, b3 , b4;
   short s1, s2, s3, s4;
   int i1, i2, i3, i4;
   long l1, l2, l3, l4;

}

\problem {
(
 self != null     & 
 bmin  = byte_MIN  &
 smin  = short_MIN &
 imin  = int_MIN   &
 lmin  = long_MIN  &
 bmax  = byte_MAX  &
 smax  = short_MAX &
 imax  = int_MAX   &
 lmax  = long_MAX  
)
 ->  

 \<{ method-frame(source=A) :{
     b1 = (byte)(bmin + 10);
     b2 = (byte)(10 + b1);
     b3 = (byte)(bmax + 1);

     s1 = (short)(smin + 10);
     s2 = (short)(10 + s1);
     s3 = (short)(smax + 1);

     i1 = bmax + 10; // bmax is used with intend
     i2 = imax + 1;
 
     l1 = imax + 1L; // imax is used with intend
     l2 = imax + 1; 
    } }\> 
     (
        b1 = byte_MIN + 10  & b2 = b1 + 10 & b3 = byte_MIN  &
        s1 = short_MIN + 10 & s2 = s1 + 10 & s3 = short_MIN &
        i1 = byte_MAX + 10 & i2 = int_MIN &
        l1 = int_MAX + 1 & l2 = int_MIN   
     )
}
