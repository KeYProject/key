\problem {
	\<{ int[] a; }\> (
		! a = null ->
                { a.length := 10,
                  \for int i; a[i] := neg(i),
                  \for int i; \if (i=0) a[i] := i }
                \<{ for ( int i = 0; i != 10; ++i )
                      a[i] += i; }\>
                    \forall int i; (geq(i,0) & lt(i,10) -> a[i] = 0)
        )
}
