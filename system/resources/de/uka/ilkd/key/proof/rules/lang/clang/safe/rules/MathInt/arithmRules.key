\sorts {
	\generic Integer, Integer1, Integer2 \oneof{CHAR, SCHAR, UCHAR, SSHRT, USHRT, SINT, UINT, SLONG, ULONG, SLLONG, ULLONG};
}

\schemaVariables {
	\term int schemaInt, schemaInt1, schemaInt2;

	\term Integer schemaInteger;
	\term Integer1 schemaInteger1;
	\term Integer2 schemaInteger2;
}

\rules {
	/** 
	 *	Integer::toInt(Integer::fromInt(schemaInt)) = schemaInt 
	 */
	
	elimIntegerToIntFromInt_CHAR {
		\find (CHAR::toInt(CHAR::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_SCHAR {
		\find (SCHAR::toInt(SCHAR::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_UCHAR {
		\find (UCHAR::toInt(UCHAR::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_SSHRT {
		\find (SSHRT::toInt(SSHRT::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_USHRT {
		\find (USHRT::toInt(USHRT::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_SINT {
		\find (SINT::toInt(SINT::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_UINT {
		\find (UINT::toInt(UINT::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};	

	elimIntegerToIntFromInt_SLONG {
		\find (SLONG::toInt(SLONG::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};	

	elimIntegerToIntFromInt_ULONG {
		\find (ULONG::toInt(ULONG::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_SLLONG {
		\find (SLLONG::toInt(SLLONG::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};

	elimIntegerToIntFromInt_ULLONG {
		\find (ULLONG::toInt(ULLONG::fromInt(schemaInt)))
		\replacewith (schemaInt)
		\heuristics(simplify_arithm)
	};
}
