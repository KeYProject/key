\schemaVariables {
	\modalOperator {diamond, box} #allmodal;
	\formula formula;

	\skolemTerm int dummy;

	\program ClangVariable #tvar, #tvar1, #tvar2;

	\program ClangValueType #vtype;
	\program ClangIntegerType #itype;
	\program ClangPointerType #ptype;
	\program ClangScalarType #stype;
	\program ClangObjectType #otype;

	\program ClangVariable #var, #var1, #var2, #var3;
	\program ClangValueVariable #vvar, #vvar1, #vvar2, #vvar3;
	\program ClangIntegerVariable #ivar, #ivar1, #ivar2, #ivar3;
	\program ClangPointerVariable #pvar, #pvar1, #pvar2, #pvar3;
	\program ClangObjectVariable #ovar, #ovar1, #ovar2, #ovar3;

	\program ClangValueSimpleExpression #vsexp, #vsexp1, #vsexp2, #vsexp3;
	\program ClangIntegerSimpleExpression #isexp, #isexp1, #isexp2, #isexp3;
	\program ClangPointerSimpleExpression #psexp, #psexp1, #psexp2, #psexp3;

	\program ClangExpression #exp, #exp1, #exp2;
	\program ClangObjectExpression #oexp, #oexp1, #oexp2;
	\program ClangValueExpression #vexp, #vexp1, #vexp2;
	\program ClangComplexExpression #cexp, #cexp1, #cexp2;
	\program ClangValueComplexExpression #vcexp, #vcexp1, #vcexp2;
	\program ClangObjectComplexExpression #ocexp, #ocexp1, #ocexp2;
}

\rules {

	///////// Reductions /////////

	/* Initialization */
	
	/**
	 * Reducing value variable declaration with initializer.
	 * 
	 * Normal form:
	 *	#vtype #vvar;
	 *	#vvar = #exp;
	 */
	reduceVarDeclInit_Value { 
		\find (\modality{#allmodal}.. #vtype #vvar = #exp; ...\endmodality(formula)) 
		\replacewith ( 
			\modality{#allmodal}.. #vtype #vvar; #vvar = #exp; ...\endmodality(formula))
		\heuristics(simplify_prog)
	};
	
	/**
	 * Reducing static value variable declaration with initializer.
	 * 
	 * Normal form:
	 *	static #vtype #vvar;
	 *	#vvar = #exp;
	 */
	reduceStaticVarDeclInit_Value { 
		\find (\modality{#allmodal}.. static #vtype #vvar = #exp; ...\endmodality(formula)) 
		\replacewith ( 
			\modality{#allmodal}.. static #vtype #vvar; #vvar = #exp; ...\endmodality(formula))
		\heuristics(simplify_prog)
	};

	/**
	 * Reducing static value variable declaration.
	 * 
	 * Normal form:
	 *	#vtype #vvar;
	 */
	reduceStaticVarDecl_Value { 
		\find (\modality{#allmodal}.. static #vtype #vvar; ...\endmodality(formula)) 
		\replacewith ( 
			\modality{#allmodal}.. #vtype #vvar; ...\endmodality(formula))
		\heuristics(simplify_prog)
	};

	/**
	 * Reducing scalar object variable declaration with initializer.
	 * 
	 * Normal form:
 	 *	#stype #ovar;
	 *	@#ovar = #exp;
	 */
	reduceVarDeclInit_Scalar { 
		\find (\modality{#allmodal}.. #stype #ovar = #exp; ...\endmodality(formula)) 
		\replacewith ( 
			\modality{#allmodal}.. #stype #ovar; @#ovar = #exp; ...\endmodality(formula))
		\heuristics(simplify_prog)
	};

	/**
	 * Reducing scalar object variable static declaration with initializer.
	 * 
	 * Normal form:
	 *	#stype #ovar;
	 *	@#ovar = #exp;
	 */
	reduceStaticVarDeclInit_Scalar { 
		\find (\modality{#allmodal}.. static #stype #ovar = #exp; ...\endmodality(formula)) 
		\replacewith ( 
			\modality{#allmodal}.. static #stype #ovar; @#ovar = #exp; ...\endmodality(formula))
		\heuristics(simplify_prog)
	};
}