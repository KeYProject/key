    \displayname "methodCall"
  };

  methodCallWithinClass { 
    \find (\modality{#allmodal}{.. #mn(#elist); ...}\endmodality(post)) 
    \replacewith (\modality{#allmodal}{.. 
	#method-call(#mn(#elist)); ...}\endmodality(post)) 
