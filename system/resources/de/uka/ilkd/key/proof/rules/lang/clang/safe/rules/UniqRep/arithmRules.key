\sorts {
	\generic Integer, Integer1, Integer2 \oneof{CHAR, SCHAR, UCHAR, SSHRT, USHRT, SINT, UINT, SLONG, ULONG, SLLONG, ULLONG};
}

\schemaVariables {
	\term int schemaInt, schemaInt1, schemaInt2;

	\term Integer schemaInteger;
	\term Integer1 schemaInteger1;
	\term Integer2 schemaInteger2;
}

\rules {
	simplifyCanConvertIntegerValue {
		\find (canConvertIntegerValue(schemaInteger1, schemaInteger2))
		\replacewith ( inIntegerRange(#ClangIntegerToInt(schemaInteger1), schemaInteger2))
		\heuristics(simplify_arithm)
	};

	simplifyConvertIntegerValue {
		\find (convertIntegerValue(schemaInteger1, schemaInteger2))
		\replacewith ( #ClangIntegerFromInt(#ClangIntegerToInt(schemaInteger1), schemaInteger2))
		\heuristics(simplify_arithm)
	};
}
