\sorts {
	\generic Generic, Generic1, Generic2, Generic3;
}

\schemaVariables {
	\term Generic1 schemaTerm1;
	\term Generic2 schemaTerm2;
	\term Generic3 schemaTerm3;	
	
	\term[rigid] Generic1 schemaTermRigid1;
	\term[rigid] Generic2 schemaTermRigid2;	
}

\rules {
	use_eq_left {
		\assumes (schemaTermRigid1 = schemaTermRigid2 ==>)
		\find(schemaTermRigid2)
		\replacewith(schemaTermRigid1)
	};	
	
	use_eq_left_nonrigid {
		\assumes (schemaTerm1 = schemaTerm2 ==>)
		\find(schemaTerm2)
		\sameUpdateLevel
		\replacewith(schemaTerm1)
	};	
	
	use_eq_right {
		\assumes (schemaTermRigid1 = schemaTermRigid2 ==>)
		\find(schemaTermRigid1)	
		\replacewith(schemaTermRigid2)
	};		
	
	use_eq_right_nonrigid {
		\assumes (schemaTerm1 = schemaTerm2 ==>)
		\find(schemaTerm1)
		\sameUpdateLevel		
		\replacewith(schemaTerm2)
	};		
}
