\functions {	
	// Function that converts the first integer value to the dynamic type of 
	// the second value
	// NB! This is not a function with correctly defined sematnics, but just 
	// a syntactical aid for parametrizing rules with different behavior.	
	Value convertIntegerValue(Value, Value);
}

\predicates {
	// Predicate telling if the first int value belongs to the range of the 
	// dynamic integer type of the second value		
	// NB! This is just a syntactical aid for parametrizing rules with different behavior.	
	inIntegerRange(int, Value);
	
	// Predicate telling if the first integer value can be converted to the dynamic type
	// of the second value
	// NB! This is just a syntactical aid for parametrizing rules with different behavior.	
	canConvertIntegerValue(Value, Value);
}
