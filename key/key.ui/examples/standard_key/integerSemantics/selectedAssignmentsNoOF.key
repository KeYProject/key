/**
   Tests some simple assignments with the integer semantics treating
   Java integers as whole numbers (infinte range). 

   @provable yes
   @author Richard Bubel
 */

\javaSource "./classes/";

\withOptions intRules:arithmeticSemanticsIgnoringOF;

\programVariables {
   A self;
   byte  bmin, bmax;
   short smin, smax;
   int   imin, imax;
   long  lmin, lmax;

   byte b1, b2, b3 , b4;
   short s1, s2, s3, s4;
   int i1, i2, i3, i4;
   long l1, l2, l3, l4;

}

\problem {
(
 self != null     & 
 bmin  = byte_MIN  &
 smin  = short_MIN &
 imin  = int_MIN   &
 lmin  = long_MIN  &
 bmax  = byte_MAX  &
 smax  = short_MAX &
 imax  = int_MAX   &
 lmax  = long_MAX  
)
 ->  
 \<{ method-frame(source=A) :{
        b1 = 1 + 3;  
	b2 = (byte) (bmin - 1);  
	b3 = (byte) (bmax + 1);      
	b4 = (byte) -bmin;

        s1 = bmax;  
        s2 = (short) (smin - 1);  
        s3 = (short) (smax + 1);      
        s4 = (short) -smin;

        i1 = smax;  
        i2 = imin - 1;  
        i3 = imax + 1;      
        i4 = -imin;

        l1 = imax;  
        l2 = lmin - 1;  
        l3 = lmax + 1;      
	l4 = -lmin;
    } }\> 
     (
        b1 = 4 & b2 = bmin-1 & b3 = bmax+1 & b4 = -bmin &
        s1 = bmax & s2 = smin-1 & s3 = smax+1 & s4 = -smin &
        i1 = smax & i2 = imin-1 & i3 = imax+1 & i4 = -imin &
        l1 = imax & l2 = lmin-1 & l3 = lmax+1 & l4 = -lmin   
     )
}
