// This file contains rules usable for loop invariant handling

\sorts {
}



\schemaVariables {
  \formula a, b, c, d;
  \term int k, i, j;
  \skolemTerm int sk ;
  \variables int v;
}


\rules {

crossInst {
    \assumes (==> ((k <= -1 | k >= i) | c))
    \find (\forall v; (((v <= -1 | v >= j) | b) | a) ==>)
    \varcond (\new(sk, \dependingOn(b)))
    \add (sk = k & {\subst v; sk}(((v <= -1 | v >= j) | b) | a) ==>)
    \heuristics (loopInvariant)
};

cutUpperBound {
    \assumes (\forall v; (((v <= -1 | v >= j) | b) | a) ==>)
    \find (==> ((k <= -1 | k >= i) | c))
    \add ((k = i) ==>);
    \add ((k != i) ==>)
    \heuristics (loopInvariant)
};
}
