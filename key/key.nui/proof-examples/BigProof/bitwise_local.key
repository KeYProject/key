\rules {

  copyInAntec {
    \schemaVar \formula b;
    
    \find(b ==>)
    \replacewith(b ==>)
    \addrules (
      insertCopy {
        \add(b ==>)
        }
     )
  };

  weakenSubInAntec {
    \schemaVar \formula b;
    
    \find(b)
    \antecedentPolarity
    \replacewith(true)    
  };

  weakenSubInSucc {
    \schemaVar \formula b;
    
    \find(b)
    \succedentPolarity
    \replacewith(false)    
  };



}
