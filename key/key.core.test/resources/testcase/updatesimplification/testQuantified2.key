\programVariables {
  int i;
  int j;
  int k;
}

\problem {

  (
   \<{ int[] a; }\>
   { a.length := 10 }
    { \for int i; \if (geq(i,0) & lt(i,a.length)) a[i] := 0 }
     (a[5] = 0)
  )
  <->
  (
    \<{int[] a; }\>
      \if (geq(5, 0) & lt(5, (jint)10)) \then ((jint)0) \else (a[5]) = 0
  )

}
