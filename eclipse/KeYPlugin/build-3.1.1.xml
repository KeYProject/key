<?xml version="1.0" encoding="UTF-8"?>
<project name="KeYPlugin" default="build.jars" basedir=".">

	<!-- $Format: "<property name=\"version\" value=\"1.$ProjectVersion$\"/>"$ -->
<property name="version" value="1.hoareWithUpdates.17"/>


	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="true"/>
	<property name="javacSource" value="1.4"/>
	<property name="javacTarget" value="1.4"/>
	<property name="compilerArg" value=""/>
	<path id="path_bootclasspath">
		<fileset dir="${java.home}/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>

	<target name="init" depends="properties">
		<condition property="pluginTemp" value="${buildTempFolder}/plugins">
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
		<condition property="build.result.folder" value="${pluginTemp}/KeYPlugin">
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>

	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: KeYPlugin for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<zip destfile="${plugin.destination}/KeYPlugin_${version}.jar" basedir="${temp.folder}/KeYPlugin_${version}" filesonly="false" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="KeYPlugin.jar" depends="init" unless="KeYPlugin.jar" description="Create jar: KeYPlugin KeYPlugin.jar.">
		<delete dir="${temp.folder}/KeYPlugin.jar.bin"/>
		<mkdir dir="${temp.folder}/KeYPlugin.jar.bin"/>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/KeYPlugin.jar.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bootclasspath}" source="${javacSource}" target="${javacTarget}"		>
			<compilerarg line="${compilerArg}"/>
			<classpath>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.runtime_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.osgi_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ui_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.help_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.swt_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.swt.gtk.linux.x86_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.jface_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.commands_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ui.workbench_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ui.workbench.compatibility_3.1.0/compatibility.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ui.workbench.compatibility_3.1.0/@dot"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.expressions_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.resources_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.resources.linux_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.resources.compatibility_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.runtime.compatibility_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.update.configurator_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ant.core_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.core.variables_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.jdt.core_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.text_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.team.core_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.jdt_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ui.intro_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ui.forms_3.1.0.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.eclipse.ui.cheatsheets_3.1.1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-antlr.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-apache-bcel.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-apache-bsf.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-apache-log4j.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-apache-oro.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-apache-regexp.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-apache-resolver.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-commons-logging.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-commons-net.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-icontract.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-jai.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-javamail.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-jdepend.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-jmf.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-jsch.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-junit.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-launcher.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-netrexx.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-nodeps.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-starteam.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-stylebook.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-swing.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-trax.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-vaj.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-weblogic.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-xalan1.jar"/>
				<pathelement path="${eclipse_home}/plugins/org.apache.ant_1.6.5/lib/ant-xslp.jar"/>
				<pathelement path="../KeYExternalLibraries/jcoverage.jar"/>
				<pathelement path="../KeYExternalLibraries/antlr.jar"/>
				<pathelement path="../KeYExternalLibraries/dresden-ocl-demo.jar"/>
				<pathelement path="../KeYExternalLibraries/jargs.jar"/>
				<pathelement path="../KeYExternalLibraries/javacc.jar"/>
				<pathelement path="../KeYExternalLibraries/junit.jar"/>
				<pathelement path="../KeYExternalLibraries/log4j.jar"/>
				<pathelement path="../KeYExternalLibraries/recoder.jar"/>
				<pathelement path="../KeYExternalLibraries/xerces.jar"/>
				<pathelement path="../KeYExternalLibraries/parser.jar"/>
				<pathelement path="../org.key-project.core/key.jar"/>
				<pathelement path="@dot"/>
			</classpath>
			<src path="src/"			/>
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/KeYPlugin.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="src/" excludes="**/*.java, **/package.htm*,null"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/KeYPlugin.jar" basedir="${temp.folder}/KeYPlugin.jar.bin"/>
		<delete dir="${temp.folder}/KeYPlugin.jar.bin"/>
	</target>

	<target name="KeYPluginsrc.zip" depends="init" unless="KeYPluginsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip destfile="${build.result.folder}/KeYPluginsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: KeYPlugin.">
		<available property="KeYPlugin.jar" file="${build.result.folder}/KeYPlugin.jar"/>
		<antcall target="KeYPlugin.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="KeYPluginsrc.zip" file="${build.result.folder}/KeYPluginsrc.zip"/>
		<antcall target="KeYPluginsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/KeYPlugin_${version}"/>
		<copy todir="${destination.temp.folder}/KeYPlugin_${version}" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}" includes="KeYPlugin.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/KeYPlugin_${version}" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="plugin.xml,README,META-INF/,key-small.png,KeYPlugin.jar/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/KeYPlugin_${version}"/>
		<copy file="${build.result.folder}/KeYPluginsrc.zip" todir="${destination.temp.folder}/KeYPlugin_${version}" failonerror="false" overwrite="false"/>
		<copy todir="${destination.temp.folder}/KeYPlugin_${version}" failonerror="false" overwrite="false">
			<fileset dir="${basedir}" includes="src/,plugin.xml,README,META-INF/,key-small.png"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/KeYPlugin_${version}"/>
		<copy file="${temp.folder}/KeYPlugin.jar.bin.log" todir="${destination.temp.folder}/KeYPlugin_${version}" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: KeYPlugin of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/KeYPlugin.jar"/>
		<delete file="${build.result.folder}/KeYPluginsrc.zip"/>
		<delete file="${plugin.destination}/KeYPlugin_${version}.jar"/>
		<delete file="${plugin.destination}/KeYPlugin_${version}.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="${basedir}" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: KeYPlugin.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip destfile="${plugin.destination}/KeYPlugin_${version}.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
