<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.jdt.core.IMethod"
            class="org.key_project.key4eclipse.starter.core.adapter.JavaElementResourceAdapterFactory">
         <adapter
               type="org.eclipse.core.resources.IResource">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.key_project.key4eclipse.starter.core.expression.JavaTextSelectionPropertyTester"
            id="org.key_project.key4eclipse.starter.ui.JavaTextSelectionPropertyTester.selection"
            namespace="org.key_project.key4eclipse.starter.core.javaTextSelection"
            properties="selectedElementInstanceOf"
            type="org.eclipse.jface.text.ITextSelection">
      </propertyTester>
      <propertyTester
            class="org.key_project.key4eclipse.starter.core.expression.JavaTextSelectionPropertyTester"
            id="org.key_project.key4eclipse.starter.ui.JavaTextSelectionPropertyTester.editor"
            namespace="org.key_project.key4eclipse.starter.core.compilationUnitEditor"
            properties="selectedElementInstanceOf"
            type="org.eclipse.ui.texteditor.ITextEditor">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="org.key_project.key4eclipse.starter.core.decorator.ClassPathFolderLightweightLabelDecorator"
            icon="icons/folder_cp_decoration.gif"
            id="key_project.key4eclipse.starter.core.classPathFolderDecorator"
            label="Class Path Folder"
            lightweight="true"
            objectClass="org.eclipse.core.resources.IFolder"
            state="true">
      </decorator>
      <decorator
            adaptable="true"
            class="org.key_project.key4eclipse.starter.core.decorator.ClassPathProjectLightweightLabelDecorator"
            icon="icons/project_cp_decoration.gif"
            id="key_project.key4eclipse.starter.core.classPathProjectDecorator"
            label="Class Path Project"
            lightweight="true"
            objectClass="org.eclipse.core.resources.IProject"
            state="true">
      </decorator>
   </extension>
</plugin>
