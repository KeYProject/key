<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="org.key_project.key4eclipse.resources.ui.KeYProjectWizard"
         name="KeYProjectWizard"
         point="org.eclipse.ui.newWizards">
      <category
            id="org.key_project.key4eclipse.resources.ui.KeYCategory"
            name="KeY">
      </category>
      <wizard
            category="org.key_project.key4eclipse.resources.ui.KeYCategory"
            class="org.key_project.key4eclipse.resources.ui.wizard.KeYProjectWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            icon="icons/logo16.gif"
            id="org.key_project.key4eclipse.resources.ui.keyprojectwizard"
            name="KeY Project"
            project="true">
         <description>
            Create a KeY project.
         </description>
      </wizard>
      <wizard
            category="org.eclipse.ui.Examples/org.key_project.key4eclipse.common.ui.example.category"
            class="org.key_project.key4eclipse.resources.ui.wizard.KeYResourceExampleNewWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            icon="icons/logo16.gif"
            id="org.key_project.key4eclipse.resources.ui.wizard.KeYResourceExampleNewWizard"
            name="KeY Project Example"
            project="true">
         <description>
            Create a new KeY Project filled with example content.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.key_project.key4eclipse.resources.ui.convertToKeYProjectCommand"
               icon="icons/logo16.gif"
               label="Convert to KeY Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.projectNature"
                           value="org.eclipse.jdt.core.javanature">
                     </test>
                     <not>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.projectNature"
                              value="org.key_project.key4eclipse.resources.KeYProjectNature">
                        </test>
                     </not>
                  </adapt>
                  <or>
                     <instanceof
                           value="org.eclipse.jdt.core.IJavaProject">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.core.resources.IProject">
                     </instanceof>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.key_project.key4eclipse.resources.ui.buildOutdatedProofsCommand"
               icon="icons/logo16.gif"
               label="Build outdated proofs"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.projectNature"
                           value="org.eclipse.jdt.core.javanature">
                     </test>
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.projectNature"
                           value="org.key_project.key4eclipse.resources.KeYProjectNature">
                     </test>
                  </adapt>
                  <or>
                     <instanceof
                           value="org.eclipse.jdt.core.IJavaProject">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.core.resources.IProject">
                     </instanceof>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.key_project.key4eclipse.resources.ui.category"
            name="KeY Resources">
      </category>
      <command
            categoryId="org.key_project.key4eclipse.resources.ui.category"
            id="org.key_project.key4eclipse.resources.ui.convertToKeYProjectCommand"
            name="Convert to KeY Project.">
      </command>
      <command
            categoryId="org.key_project.key4eclipse.resources.ui.category"
            id="org.key_project.key4eclipse.resources.ui.buildOutdatedProofsCommand"
            name="Build outdated proofs">
      </command>
      <command
            categoryId="org.key_project.key4eclipse.common.ui.category"
            description="Deletes the log file with all its entries."
            id="org.key_project.key4eclipse.resources.ui.clearLog"
            name="Clear Log">
      </command>
      <command
            categoryId="org.key_project.key4eclipse.common.ui.category"
            id="org.key_project.key4eclipse.resources.ui.LinkWithWorkbenchPartCommand"
            name="Link with Editor/View">
         <state
               id="org.eclipse.ui.commands.toggleState">
            <class
                  class="org.eclipse.ui.handlers.RegistryToggleState">
               <parameter
                     name="default"
                     value="false">
               </parameter>
               <parameter
                     name="persisted"
                     value="true">
               </parameter>
            </class>
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.key_project.key4eclipse.resources.ui.convertToKeYProjectCommand"
            icon="icons/logo16.gif">
      </image>
      <image
            commandId="org.key_project.key4eclipse.resources.ui.buildOutdatedProofsCommand"
            icon="icons/logo16.gif">
      </image>
      <image
            commandId="org.key_project.key4eclipse.resources.ui.clearLog"
            icon="icons/clear_co.gif">
      </image>
      <image
            commandId="org.key_project.key4eclipse.resources.ui.LinkWithWorkbenchPartCommand"
            icon="icons/synced.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.key_project.key4eclipse.resources.ui.handler.ConvertJavaToKeYProjectHandler"
            commandId="org.key_project.key4eclipse.resources.ui.convertToKeYProjectCommand">
         <enabledWhen>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.projectNature"
                        value="org.eclipse.jdt.core.javanature">
                  </test>
                  <not>
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.projectNature"
                           value="org.key_project.key4eclipse.resources.KeYProjectNature">
                     </test>
                  </not>
               </adapt>
               <or>
                  <instanceof
                        value="org.eclipse.jdt.core.IJavaProject">
                  </instanceof>
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
               </or>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="org.key_project.key4eclipse.resources.ui.handler.ManualBuildHandler"
            commandId="org.key_project.key4eclipse.resources.ui.buildOutdatedProofsCommand">
         <enabledWhen>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.projectNature"
                        value="org.eclipse.jdt.core.javanature">
                  </test>
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.projectNature"
                        value="org.key_project.key4eclipse.resources.KeYProjectNature">
                  </test>
               </adapt>
               <or>
                  <instanceof
                        value="org.eclipse.jdt.core.IJavaProject">
                  </instanceof>
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
               </or>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="org.key_project.key4eclipse.resources.ui.handler.LinkWithWorkbenchPartHandler"
            commandId="org.key_project.key4eclipse.resources.ui.LinkWithWorkbenchPartCommand">
      </handler>
      <handler
            class="org.key_project.key4eclipse.resources.ui.handler.ClearLogHandler"
            commandId="org.key_project.key4eclipse.resources.ui.clearLog">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            category="org.key_project.key4eclipse.common.ui.keyProjectProperties"
            class="org.key_project.key4eclipse.resources.ui.propertypages.ProofManagementPropertyPage"
            id="org.key_project.key4eclipse.resources.ui.proofManagementPropertyPage"
            name="KeY Proof Management">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     forcePluginActivation="true"
                     property="org.eclipse.core.resources.projectNature"
                     value="org.key_project.key4eclipse.resources.KeYProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
      <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.ui.editors.text.TextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="proofmeta"
            icon="icons/proofmetafile16.png"
            id="org.key_project.key4eclipse.common.ui.keyTextEditor"
            name="Proof Meta Text Editor">
      </editor>
   </extension>
      <extension
            point="org.eclipse.jdt.ui.javaElementFilters">
         <filter
               class="org.key_project.key4eclipse.resources.ui.propertypages.ProofmetaFilter"
               enabled="true"
               id="org.key_project.key4eclipse.resources.propertypages.proofmetafilter.packageexplorer"
               name="Poofmeta Filter"
               targetId="org.eclipse.jdt.ui.PackageExplorer"></filter>
      </extension>
      <extension
            point="org.eclipse.ui.navigator.navigatorContent">
         <commonFilter
               activeByDefault="true"
               class="org.key_project.key4eclipse.resources.ui.propertypages.ProofmetaFilter"
               id="org.key_project.key4eclipse.resources.propertypages.proofmetafilter.projectexplorer"
               name="Proofmeta Filter"
               visibleInUI="true">
         </commonFilter>
      </extension>
      <extension
            point="org.eclipse.ui.navigator.viewer">
         <viewerContentBinding
               viewerId="org.eclipse.ui.navigator.ProjectExplorer">
            <includes>
               <contentExtension
                     pattern="org.key_project.key4eclipse.resources.propertypages.proofmetafilter.projectexplorer">
               </contentExtension>
            </includes>
         </viewerContentBinding>
      </extension>
      <extension
            point="org.eclipse.ui.views">
         <category
               id="org.key_project.key4eclipse.resources.ui.view.category"
               name="KeY Resources">
         </category>
         <view
               category="org.key_project.key4eclipse.resources.ui.view.category"
               class="org.key_project.key4eclipse.resources.ui.view.VerificationStatusView"
               icon="icons/logo16.gif"
               id="org.key_project.key4eclipse.resources.ui.view.VerificationStatusView"
               name="Verification Status"
               restorable="true">
         </view>
         <view
               category="org.key_project.key4eclipse.resources.ui.view.category"
               class="org.key_project.key4eclipse.resources.ui.view.VerificationLogView"
               icon="icons/resource_log.gif"
               id="org.key_project.key4eclipse.resources.ui.view.VerificationLogView"
               name="Verification Log"
               restorable="true">
         </view>
      </extension>
      <extension
            point="org.eclipse.ui.menus">
         <menuContribution
               locationURI="toolbar:org.key_project.key4eclipse.resources.ui.view.VerificationStatusView?after=additions">
            <command
                  commandId="org.key_project.key4eclipse.resources.ui.LinkWithWorkbenchPartCommand"
                  icon="icons/synced.gif"
                  id="org.key_project.key4eclipse.resources.ui.LinkWithWorkbenchPart"
                  style="toggle"
                  tooltip="Link with Editor/View">
            </command>
         </menuContribution>
         <menuContribution
               locationURI="toolbar:org.key_project.key4eclipse.resources.ui.view.VerificationLogView?after=additions">
            <command
                  commandId="org.key_project.key4eclipse.resources.ui.LinkWithWorkbenchPartCommand"
                  icon="icons/synced.gif"
                  id="org.key_project.key4eclipse.resources.ui.LinkWithWorkbenchPart"
                  style="toggle"
                  tooltip="Link with Editor/View">
            </command>
            <command
                  commandId="org.key_project.key4eclipse.resources.ui.clearLog"
                  icon="icons/clear_co.gif"
                  id="org.key_project.key4eclipse.resources.ui.clearLog"
                  tooltip="Clear Log">
            </command>
         </menuContribution>
      </extension>
      <extension
            point="org.eclipse.ui.perspectiveExtensions">
         <perspectiveExtension
               targetID="org.eclipse.jdt.ui.JavaPerspective">
            <viewShortcut
                  id="org.key_project.key4eclipse.resources.ui.view.VerificationStatusView">
            </viewShortcut>
         </perspectiveExtension>
         <perspectiveExtension
               targetID="org.key_project.keyide.ui.perspectives">
            <viewShortcut
                  id="org.key_project.key4eclipse.resources.ui.view.VerificationStatusView">
            </viewShortcut>
         </perspectiveExtension>
      </extension>
</plugin>
