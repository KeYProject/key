\programVariables {
int x;
int y;
}


// inv
// xl_0 * yl_0 = x * y + z & y>=0

\problem {
(\forall int xl; \forall int yl; (xl >= 0 & yl >= 0 ->
{x:=xl || y:=yl}
\<{
  int z=0;
  while (y>0) {
    z = z+x;
    y = y-1;
  }
}\>z = xl * yl))

}

